<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="com.sunnyadhikari.Main.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text = "First name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="nameField"/>

    <Label text = "Last name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
   <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="lastNameField" />


    <Label text = "Email:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="emailField" />

    <Label text = "Student ID:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="studentIDField" />


    <Button text="Submit" defaultButton="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.halignment="CENTER"
            textFill="aliceblue" style="fx-background-color: blue" onAction="#onSubmit" fx:id="submitButton">
    </Button>
</GridPane>